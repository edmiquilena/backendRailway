  <title>MariArt - Home</title>
</head>

<body class="container-fluid">
  <main>
    <!-- BARRA NAVEGACIÃ“N -->
    <div class="container w-75 p-2 border mt-3">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h2>Bienvenid@, <%= name%>
          </h2>
        </div>
        <div>
          <button class="btn btn-dark btn-lg" id="logout" onclick="location.href='/'">
            Productos
          </button>
        </div>
        <div>
          <button class="btn btn-dark btn-lg" id="logout" onclick="location.href='/carrito'">
            Carrito
          </button>
        </div>
        <div>
          <button class="btn btn-dark btn-lg" id="logout" onclick="location.href='/cuenta'">
            Mi cuenta
          </button>
        </div>
        <div>
          <button class="btn btn-dark btn-lg" id="logout" onclick="location.href='/logout'">
            Desloguear
          </button>
        </div>
      </li>
    </div>
    <div class="container w-75 p-3 border mt-2">
      <h3 class="text-white bg-dark">Mi Cuenta</h3>
      <div>
        <img width="200" src="<%= imagen %>" alt="Foto / Avatar">
      </div>
      <ul>
        <li>
          <strong>Nombre:</strong>
          <p>
            <%= nombre %>
          </p>
        </li>
        <li>
          <strong>Direccion:</strong>
          <p>
            <%= direccion %>
          </p>
        </li>
        <li>
          <strong>Edad:</strong>
          <p>
            <%= edad %>
          </p>
        </li>
        <li>
          <strong>Email:</strong>
          <p>
            <%= email %>
          </p>
        </li>
        <li>
          <strong>Telefono:</strong>
          <p>
            <%= telefono %>
          </p>
        </li>
      </ul>

    </div>
  </main>
  <script>
    
  </script>
</body>

</html>