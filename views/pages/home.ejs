<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta Content-Type="multipart/form-data">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"
    integrity="sha512-RNLkV3d+aLtfcpEyFG8jRbnWHxUqVZozacROI4J2F1sTaDqo1dPQYs01OMi1t1w9Y2FdbSCDSQ2ZVdAC8bzgAg=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
  <title>MariArt - Home</title>
</head>

<body class="container-fluid">
  <main>
    <!-- MENSAJE DE BIENVENIDA -->
    <div class="container w-75 p-2 border mt-3">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h2>Bienvenid@, <%= username%>
          </h2>
          <h3> Email: <%= email%>
          </h3>
        </div>
        <div>
          <button class="btn btn-dark btn-lg" id="logout" onclick="location.href='/logout'">
            Desloguear
          </button>
        </div>
      </li>
    </div>
    <div class="container w-75 p-3 border mt-2">
      <h3 class="text-white bg-dark">Ingreso de Productos</h3>

      <!-- PRODUCTOS - Registro -->
      <div class="container w-50 p-3">
        <form id="formAgregarProducto">
          <div class="mb-3">
            <label for="nombre" class="form-label">Nombre:</label>
            <input type="text" id="title" name="title" class="form-control" required />
          </div>
          <div class="mb-3">
            <label for="precio" class="form-label">Precio:</label>
            <input type="text" id="price" name="price" class="form-control" required />
          </div>
          <div class="mb-3">
            <label for="imagen" class="form-label">Url Imagen:</label>
            <input type="text" id="thumbnail" name="thumbnail" class="form-control" required />
          </div>
          <button type="submit" class="btn btn-dark" id="addProduct">Agregar Producto</button>
        </form>
      </div>
    </div>
    <!-- PRODUCTOS - Listado -->
    <div class="container w-75 p-3 border mt-5">
      <h3 class="text-white bg-dark">Listado de Productos</h3>
      <div id="productos" class="container-fluid mt-2 p-3">
      </div>
    </div>

    <!-- CHAT -->
    <div class="container w-75 p-3 border mt-3">
      <h3 class="text-white bg-dark">Centro de Mensajes</h3>
      <div class="mt-3" id="porcentaje"></div>
      <div class="container w-75 p-3">
        <div id="errorEmail" class="text-danger"></div>
        <input type="email" id="email" class="form-control mt-2 mb-2 w-50" placeholder="Ingresá tu email" />
        <div id="errorName" class="text-danger"></div>
        <input type="text" id="name" class="form-control mt-2 mb-2 w-50" placeholder="Ingresá tu nombre" />
        <div id="errorLastName" class="text-danger"></div>
        <input type="text" id="lastName" class="form-control mt-2 mb-2 w-50" placeholder="Ingresá tu apellido"
          required />
        <div id="errorAge" class="text-danger"></div>
        <input type="text" id="age" class="form-control mt-2 mb-2 w-50" placeholder="Ingresá tu edad" required />
        <div id="errorAlias" class="text-danger"></div>
        <input type="text" id="alias" class="form-control mt-2 mb-2 w-50" placeholder="Ingresá tu alias" required />
        <div id="errorAvatar" class="text-danger"></div>
        <input type="text" id="avatar" class="form-control mt-2 mb-2 w-50" placeholder="Url de tu  avatar" required />
        <hr>
        <div class="mt-3" id="mensajes"></div>
        <hr>
        <form id="formPublicarMensaje" class="form-inline" autocomplete="off">
          <div class="form-group row g-3">
            <div class="col-auto">
              <input type="text" id="mensaje" class="form-control my-2 mr-2" placeholder="Ingresá un mensaje..." />
              <div id="errorMsj" class="text-danger"></div>
            </div>
            <div class="col-auto">
              <button type="submit" id="enviar" class="btn btn-primary my-2">Enviar!</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </main>
  <script src="../../index.js" type="module"></script>
  <script>
    setTimeout(() => {
      location.href = '/'
    }, 600000)
  </script>
</body>

</html>